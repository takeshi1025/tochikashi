<div class="container-fluid">
  <div class="row">
    <% @tochis.each do |tochi| %>
      <div class="col-sm-4">
        <div class="card"style="width: 20rem;">
          <div class="card-img-top text-center mt-3  mb-5">
            <%= link_to tochi_path(tochi) do %>
              <%= attachment_image_tag tochi, :image, size: "300x250" %>          
            <% end %>
          </div>
          <p class="tochi-title">
            <%= tochi.title %>
          </p>
          <%= link_to user_path(tochi.user.id) do %>
            <%= attachment_image_tag tochi.user, :profile_image, fallback: "no-image.png", size: "150x150" %>
          <% end %>
          <%= link_to tochi.user.name, user_path(tochi.user.id) %>
            <%= tochi.updated_at.strftime("%Y-%m-%d %H:%M") %>更新
        </div>
      </div>
    <% end %>
  </div>
</div>