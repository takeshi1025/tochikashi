<div class="container-fluid"> 
  <div class="row">
    <div class="col-sm-6 offset-sm-3">
      <h1 class="edit text-center mt-5">土地情報の編集</h1>
      <%= form_for @tochi do |f| %>
        <div class="form-group">
          <%= f.label :title, '土地住所' %>
          <%= f.text_field :title, class: 'form-control' %>
        </div>
          
        <div class="form-group">
          <%= f.label :body, '土地・条件の詳細' %>
          <%= f.text_area :body, class: 'form-control' %>
        </div>
          
        <div class="form-group">
          <%= f.label :image, '土地の写真' %>
          <%= f.attachment_field :image, class: 'form-control' %>
        </div>
          
        <%= f.submit '更新する', class: 'btn btn-primary btn-block mt-5 mb-5' %>
      <% end %>
    </div>
  </div
</div>