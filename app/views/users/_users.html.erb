<div class="container"> 
  <% if users.any? %>
    <ul class="list-unstyled mt-5">
      <% users.each do |user| %>
        <li class="media mt-5">
          <%= link_to user_path(user) do %>
            <%= attachment_image_tag user, :profile_image, fallback: "no_image.png", size: "150x150" %>
          <% end %>
          <div class="media-body">
            <div>
              <%= user.name %>
            </div>
            <div>
              <p><%= link_to 'プロフィール', user_path(user) %></p>
            </div>
          </div>
        </li>
      <% end %>
    </ul>
    <%= paginate users %>
  <% end %>
</div> 